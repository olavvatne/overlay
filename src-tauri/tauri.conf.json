{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ergo Overlay",
  "version": "0.1.0",
  "identifier": "com.ergo-overlay.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Ergo Overlay",
        "width": 800,
        "height": 600,
        "resizable": true,
        "dragDropEnabled": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
